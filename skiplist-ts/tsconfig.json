{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strictNullChecks": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ], 
  "exclude": [
    "node_modules"  
  ]
}